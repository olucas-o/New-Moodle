{{!
  Course page — Instituto Celebra
  Dados esperados do renderer:
  - coursefullname
  - introvideo (URL Vimeo ou embed)
  - modules[]
    - id
    - name
    - progress
    - url
}}

<div class="celebra-course">

  {{! =========================
      HEADER DO CURSO
      ========================= }}
  <section class="celebra-course-hero">

    <h1 class="celebra-course-title">
      {{coursefullname}}
    </h1>

    <div class="celebra-video-box">
      {{#introvideo}}
        <iframe
          src="{{introvideo}}"
          frameborder="0"
          allow="autoplay; fullscreen; picture-in-picture"
          allowfullscreen
        ></iframe>
      {{/introvideo}}

      {{^introvideo}}
        <div class="celebra-video-placeholder">
          Vídeo de boas-vindas
        </div>
      {{/introvideo}}
    </div>

  </section>

  {{! =========================
      MÓDULOS
      ========================= }}
  <section class="celebra-modules">

    <h2 class="celebra-section-title">
      Módulos do curso
    </h2>

    <div class="celebra-modules-grid">

  {{#modules}}
  <button
    class="celebra-module-card"
    data-cmid="{{cmid}}"
    data-progress="{{progress}}"
    aria-label="Abrir {{name}}"
  >

    <div class="celebra-module-meta">
      <strong>{{name}}</strong>

      <div class="celebra-module-progress">
        <span style="width: {{progress}}%"></span>
      </div>

      <small>{{progress}}% concluído</small>
    </div>

  </button>
  {{/modules}}

  {{^modules}}
  <div class="celebra-empty">
    Nenhum módulo disponível neste curso.
  </div>
  {{/modules}}

</div>

  </section>

</div>

{{! =========================
    MODAL DE AULA
    ========================= }}
<div class="celebra-modal-backdrop" hidden></div>

<div class="celebra-modal" hidden role="dialog" aria-modal="true">

  <header class="celebra-modal-header">
    <h3 class="celebra-modal-title">
      Título da aula
    </h3>

    <button class="celebra-modal-close" aria-label="Fechar">
      ✕
    </button>
  </header>

  <div class="celebra-modal-content">

    <div class="celebra-modal-video">
      {{! Vimeo entra aqui depois via JS/Moodle }}
      <div class="celebra-video-placeholder">
        Player de vídeo
      </div>
    </div>

    <div class="celebra-modal-sidebar">

      <div class="celebra-lesson-description">
        <h4>Descrição</h4>
        <p>
          Descrição da aula, materiais e orientações.
        </p>
      </div>

      <button class="celebra-complete-btn">
        Marcar como concluído
      </button>

    </div>

  </div>

</div>
