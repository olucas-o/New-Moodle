{{!
  Course page — Instituto Celebra
}}

<div class="celebra-course">

  <!-- HERO -->
  <section class="celebra-course-hero">
    <h1 class="celebra-course-title">{{coursefullname}}</h1>

    <div class="celebra-video-box">
      {{#introvideo}}
        <iframe
          id="celebra-intro-player"
          src="https://player.vimeo.com/video/{{introvideo}}?api=1&player_id=celebra-intro-player"
          allow="autoplay; fullscreen"
          allowfullscreen>
        </iframe>
      {{/introvideo}}

      {{^introvideo}}
        <div class="celebra-video-placeholder">
          Vídeo de boas-vindas
        </div>
      {{/introvideo}}
    </div>
  </section>

  <!-- MÓDULOS -->
  <section class="celebra-modules">
    <h2 class="celebra-section-title">Módulos do curso</h2>

    <div class="celebra-modules-grid">
      {{#modules}}
        <button
          class="celebra-module-card"
          data-cmid="{{cmid}}"
          data-vimeoid="{{vimeoid}}"
          data-name="{{name}}"
          data-description="{{description}}"
          data-progress="{{progress}}"
          aria-label="Abrir aula {{name}}">

          <div class="celebra-module-meta">
            <strong>{{name}}</strong>

            <div class="celebra-module-progress">
              <span style="width: {{progress}}%"></span>
            </div>

            <small>{{progress}}% concluído</small>
          </div>
        </button>
      {{/modules}}

      {{^modules}}
        <div class="celebra-empty">
          Nenhum módulo disponível neste curso.
        </div>
      {{/modules}}
    </div>
  </section>
</div>

<!-- MODAL -->
<div class="celebra-modal-backdrop" hidden></div>

<div class="celebra-modal" hidden role="dialog" aria-modal="true">
  <header class="celebra-modal-header">
    <h3 id="celebra-modal-title">Aula</h3>
    <button class="celebra-modal-close" aria-label="Fechar">✕</button>
  </header>

  <div class="celebra-modal-content">

    <div class="celebra-modal-video">
      <iframe
        id="celebra-vimeo-player"
        src=""
        allow="autoplay; fullscreen"
        allowfullscreen>
      </iframe>
    </div>

    <aside class="celebra-modal-sidebar">
      <div class="celebra-lesson-description">
        <h4>Descrição</h4>
        <p id="celebra-modal-description">—</p>
      </div>

      <button
        id="celebra-complete-btn"
        class="celebra-complete-btn disabled"
        disabled>
        Assista 90% para concluir
      </button>
    </aside>

  </div>
</div>

<script src="https://player.vimeo.com/api/player.js"></script>
